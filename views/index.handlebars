<!--html tags, handlebars, and form stuff goes here as well as a button that will submit the user input into the database-->

<h1>Eat-Da-Burger!</h1>
<div id = "menu-container">
<div id="container">
<h2>Burgers Not Devoured!</h2>
<div id = "not-devoured">
<ul>

{{#each burgers}}  
    {{#unless this.devoured}}
      {{> burger-block devoured = true}}
    {{/unless}}
{{/each}} 


</ul>
</div>


<h2>Burgers Devoured</h2>
<div id = "devoured"></div>
<ul>

{{#each burgers}} 
  {{#if devoured}}
    <li>{{this.burger_name}}</li>
    {{> burger-block devoured = false}}
  {{/if}}
{{/each}}    

</ul>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="burgername">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
</div>






